<% if(alert.message != "") { %>
    <div id="flashMessage" class="toast show align-items-center text-bg-<%= alert.status %> border-0 mb-3" role="alert" style="width: 100%;" aria-live="assertive" aria-atomic="true">
        <div class="toast-body d-flex align-items-center gap-3">
            <!-- Ikon untuk tipe alert -->
            <% if(alert.status === 'success') { %>
                <span><i class="fa-solid fa-circle-check fa-lg"></i></span>
            <% } else if(alert.status === 'danger') { %>
                <span><i class="fa-solid fa-circle-exclamation fa-lg"></i></span>
            <% } else if(alert.status === 'info') { %>
                <span><i class="fa-solid fa-info-circle fa-lg"></i></span>
            <% } else if(alert.status === 'warning') { %>
                <span><i class="fa-solid fa-exclamation-circle fa-lg"></i></span>
            <% } %>

            <!-- Isi pesan -->
            <div class="flex-grow-1">
                <span class=""><%= alert.message %></span>
            </div>

            <!-- Tombol close -->
            <button type="button" class="btn-close" data-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
<% } %>

  <script>
    // Timer untuk otomatis menghilangkan flash message setelah 5 detik
    setTimeout(function() {
      var flashMessage = document.getElementById('flashMessage');
      if (flashMessage) {
        flashMessage.classList.remove('show');  // Hilangkan kelas 'show' untuk memulai animasi fade-out
        setTimeout(function() {
          flashMessage.remove(); // Hapus elemen setelah animasi selesai
        }, 500); // Tunggu hingga animasi selesai
      }
    }, 5000); // 5000 ms = 5 detik
  </script>

<!-- jQuery and Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
