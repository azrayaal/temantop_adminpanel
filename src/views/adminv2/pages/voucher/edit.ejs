<%- include('../../components/header.ejs') %>
<!-- partial -->
<div class="container-fluid page-body-wrapper bg-black">
  <!-- partial:partials/_navbar.html -->
  <%- include('../../components/navbar.ejs') %>
  <div class="content-wrapper" style="padding-top: 80px">
    <!-- Sesuaikan 80px sesuai dengan tinggi navbar -->
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="row mb-2 d-flex align-items-center justify-content-between">
        <div class="col-sm-6">
          <h1>Form edit voucher</h1>
        </div>
        <div class="col-sm-6 d-flex justify-content-end">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
            <li class="breadcrumb-item"><a href="/admin/voucher">voucher</a></li>
            <li class="breadcrumb-item active">Edit</li>
          </ol>
        </div>
      </div>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <%- include ('../../components/messages.ejs')%>
        <div class="row">
          <div class="col-12">
            <div class="card">
              <!-- /.card-header -->
              <div class="card-body">
                <div class="card card-primary">
                  <div class="card-header">
                    <h3 class="card-title">
                      Form edit data voucher <%= voucher.name %> (<%= voucher.unique_code %>)
                    </h3>
                  </div>
                  <!-- /.card-header -->
                  <!-- form start -->
                  <form
                    action="/admin/voucher/edit/<%= voucher.id %>?_method=PUT"
                    method="POST"
                    enctype="multipart/form-data"
                  >
                    <div class="card-body">

                      <div class="form-group">
                        <label for="name">Voucher Name</label>
                        <input
                          type="text"
                          name="name"
                          class="form-control"
                          id="name"
                          value="<%= voucher.name %>"
                          placeholder="Voucher Name"
                          required
                        />
                      </div>

                      <div class="form-group">
                        <label for="unique_code">Voucher Code</label>
                        <input
                          type="text"
                          name="unique_code"
                          class="form-control"
                          id="unique_code"
                          value="<%= voucher.unique_code %>"
                          placeholder="Voucher Code"
                          required
                        />
                      </div>

                      <div class="form-group">
                        <label for="price">Price</label>
                        <select name="price" class="form-control" id="price" required>
                          <option value="10000" <%= voucher.price == 10000 ? 'selected' : '' %>>10.000</option>
                          <option value="20000" <%= voucher.price == 20000 ? 'selected' : '' %>>20.000</option>
                          <option value="50000" <%= voucher.price == 50000 ? 'selected' : '' %>>50.000</option>
                          <option value="100000" <%= voucher.price == 100000 ? 'selected' : '' %>>100.000</option>
                          <option value="200000" <%= voucher.price == 200000 ? 'selected' : '' %>>200.000</option>
                          <option value="250000" <%= voucher.price == 250000 ? 'selected' : '' %>>250.000</option>
                          <option value="500000" <%= voucher.price == 500000 ? 'selected' : '' %>>500.000</option>
                          <option value="1000000" <%= voucher.price == 1000000 ? 'selected' : '' %>>1.000.000</option>
                        </select>
                      </div>


                    </div>

                    <div class="card-footer">
                      <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Simpan
                      </button>
                      <button type="button" class="btn btn-secondary">
                        <a href="/admin/voucher" style="color: red"><i class="fa fa-undo"></i> Cancel</a>
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
  </div>
</div>
<!-- page-body-wrapper ends -->
<%- include('../../components/footer.ejs') %>

<!-- Script untuk preview gambar -->
<script>
  function previewImage(event) {
    var input = event.target;
    var reader = new FileReader();

    reader.onload = function () {
      var dataURL = reader.result;
      var output = document.getElementById("voucher-preview");
      output.src = dataURL;
      output.style.display = "block";
    };

    reader.readAsDataURL(input.files[0]);
  }
</script>
