<%- include('../../components/header.ejs') %>
<!-- partial -->
<div class="container-fluid page-body-wrapper bg-black">
  <%- include('../../components/navbar.ejs') %>
  <!-- partial:partials/_navbar.html -->
  
  <!-- Tambahkan margin-top atau padding-top untuk menghindari navbar menutupi konten -->
  <div class="content-wrapper" style="padding-top: 80px;"> <!-- Sesuaikan 80px sesuai dengan tinggi navbar -->
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="row mb-2 d-flex align-items-center justify-content-between">
        <div class="col-sm-6">
          <h1>Form add gift</h1>
        </div>
        <div class="col-sm-6 d-flex justify-content-end">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
            <li class="breadcrumb-item"><a href="/admin/gift">Gift</a></li>
            <li class="breadcrumb-item active">Create</li>
          </ol>
        </div>
      </div>
      
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-body">
                <form action="/admin/gift/create" method="POST" enctype="multipart/form-data">

                  <div class="form-group">
                     <label for="img">Image</label>
                     <input type="file" name="img" class="form-control-file" id="img" accept="image/*" onchange="previewImage(event)" />
                   </div>

                   <div class="form-group">
                     <img id="profile-preview" src="" alt="Profile Preview" style="display: none; width: 100px; height: 100px; border-radius: 100%;" class="img-thumbnail" />
                   </div>

                   <div class="form-group">
                     <label for="giftName">Gift Name</label>
                     <input type="text" name="giftName" class="form-control" id="giftName" placeholder="giftName" required />
                   </div>

                   <div class="form-group">
                     <label for="giftLink">Gift Link</label>
                     <input type="text" name="giftLink" class="form-control" id="giftLink" placeholder="giftLink" required />
                   </div>

                   <div class="form-group">
                     <label for="price">Price</label>
                     <input type="number" name="price" class="form-control" id="price" placeholder="price" required />
                   </div>
                 </div>

                 <div class="card-footer">
                   <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i>Simpan</button>
                   <button type="submit" class="btn btn-secondary">
                     <a href="/admin/gift" style="color: white"><i class="fa fa-undo"></i>Cancel</a>
                   </button>
                 </div>
               </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
<!-- page-body-wrapper ends -->
<%- include('../../components/footer.ejs') %>

<!-- Tambahkan fungsi untuk preview gambar dan toggle password -->
<script>
  // Fungsi untuk menampilkan preview gambar
  function previewImage(event) {
    var input = event.target;
    var reader = new FileReader();

    reader.onload = function() {
      var dataURL = reader.result;
      var output = document.getElementById('profile-preview');
      output.src = dataURL;
      output.style.display = 'block'; // Menampilkan gambar preview
    };

    reader.readAsDataURL(input.files[0]);
  }

  // Fungsi untuk toggle visibility password
  function togglePassword() {
    var passwordField = document.getElementById('password');
    if (passwordField.type === 'password') {
      passwordField.type = 'text'; // Menampilkan password
    } else {
      passwordField.type = 'password'; // Menyembunyikan password
    }
  }
</script>
