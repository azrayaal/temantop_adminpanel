<%- include('../../components/header.ejs') %>
<!-- partial -->
<div class="container-fluid page-body-wrapper bg-black">
  <%- include('../../components/navbar.ejs') %>
  <!-- partial:partials/_navbar.html -->
  
  <!-- Tambahkan margin-top atau padding-top untuk menghindari navbar menutupi konten -->
  <div class="content-wrapper" style="padding-top: 80px;"> <!-- Sesuaikan 80px sesuai dengan tinggi navbar -->
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="row mb-2 d-flex align-items-center justify-content-between">
        <div class="col-sm-6">
          <h1>Form add user</h1>
        </div>
        <div class="col-sm-6 d-flex justify-content-end">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
            <li class="breadcrumb-item"><a href="/admin/user">Users</a></li>
            <li class="breadcrumb-item active">Create</li>
          </ol>
        </div>
      </div>
      
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-body">
                <form action="/admin/user/create" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>
                  <!-- Profile Picture -->
                  <div class="form-group row">
                    <label for="profilePicture" class="col-sm-2 col-form-label">Profile Picture</label>
                    <div class="col-sm-10">
                      <input type="file" name="profilePicture" class="form-control-file" id="profilePicture" accept="image/*" onchange="previewImage(event)" required>
                      <div class="invalid-feedback">
                        Please upload a profile picture.
                      </div>
                    </div>
                  </div>

                  <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                      <img id="profile-preview" src="" alt="Profile Preview" style="display: none; width: 100px; height: 100px; border-radius: 50%;" class="img-thumbnail" />
                    </div>
                  </div>

                  <!-- Email -->
                  <div class="form-group row">
                    <label for="email" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                      <input type="email" name="email" class="form-control" id="email" placeholder="Email" required>
                      <div class="invalid-feedback">
                        Please provide a valid email.
                      </div>
                    </div>
                  </div>

                  <!-- Username -->
                  <div class="form-group row">
                    <label for="username" class="col-sm-2 col-form-label">Username</label>
                    <div class="col-sm-10">
                      <input type="text" name="username" class="form-control" id="username" placeholder="Username" required>
                      <div class="invalid-feedback">
                        Please provide a username.
                      </div>
                    </div>
                  </div>

                  <!-- Password -->
                  <div class="form-group row">
                    <label for="password" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10">
                      <input type="password" name="password" class="form-control" id="password" placeholder="Password" required>
                      <div class="invalid-feedback">
                        Please provide a password.
                      </div>
                    </div>
                  </div>

                  <!-- Show Password Toggle -->
                  <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                      <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="showPassword" onclick="togglePassword()">
                        <label class="form-check-label" for="showPassword">Show Password</label>
                      </div>
                    </div>
                  </div>

                  <!-- Buttons -->
                  <div class="card-footer text-right">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Simpan</button>
                    <a href="/admin/user" class="btn btn-secondary"><i class="fa fa-undo"></i> Cancel</a>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
<!-- page-body-wrapper ends -->
<%- include('../../components/footer.ejs') %>

<!-- Tambahkan fungsi untuk preview gambar dan toggle password -->
<script>
  // Fungsi untuk menampilkan preview gambar
  function previewImage(event) {
    var input = event.target;
    var reader = new FileReader();

    reader.onload = function() {
      var dataURL = reader.result;
      var output = document.getElementById('profile-preview');
      output.src = dataURL;
      output.style.display = 'block'; // Menampilkan gambar preview
    };

    reader.readAsDataURL(input.files[0]);
  }

  // Fungsi untuk toggle visibility password
  function togglePassword() {
    var passwordField = document.getElementById('password');
    if (passwordField.type === 'password') {
      passwordField.type = 'text'; // Menampilkan password
    } else {
      passwordField.type = 'password'; // Menyembunyikan password
    }
  }
</script>
