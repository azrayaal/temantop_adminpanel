<div class="main-panel">
  <div class="content-wrapper">
    <div class="page-header">
      <div class="d-flex justify-content-between align-items-center">
        <h3 class="page-title">admins</h3>
        <h3 class="card-title ms-4">
          <a href="/admins/create" class="btn btn-primary">
             +
            Add
          </a>
        </h3>
      </div>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="#">Admins</a></li>
        </ol>
      </nav>
    </div>
    <%- include ('../../components/messages.ejs')%>
    <div class="row">
      <div class="card">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-4 ">
            <h4 class="card-title mb-0">Table admins</h4>
            <input type="text" id="searchInput" class="form-control w-25" onkeyup="searchTable()" placeholder="Search for names..">
          </div>
          <div class="table-responsive">
            <table class="table table-bordered" id="adminsTable"> <!-- Menggunakan ID adminsTable -->
              <thead>
                <tr>
                  <th> No </th>
                  <th>Profile Picture</th>
                  <th onclick="sortTable(2)">Username &#x25B2;&#x25BC;</th> <!-- Sort pada kolom username -->
                  <th>Email</th>
                  <th onclick="sortTableByStatus()">Status &#x25B2;&#x25BC;</th>
                  <th>Super admin</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% for(let i = 0; i < admin.length; i++){ %>
                  <tr>
                    <td><%= i + 1 %></td>
                    <td>
                      <% if (admin[i].profilePicture && admin[i].profilePicture.startsWith('http')) { %>
                        <img 
                          src="<%= admin[i].profilePicture %>" 
                          alt="Profile Picture" 
                          class="img-thumbnail" 
                          style="width: 100px; height: 100px; border-radius: 100%;" 
                        />
                      <% } else if (admin[i].profilePicture) { %>
                        <img 
                          src="/uploads/<%= admin[i].profilePicture %>" 
                          alt="Profile Picture" 
                          class="img-thumbnail" 
                          style="width: 100px; height: 100px; border-radius: 100%;" 
                        />
                      <% } %>
                    </td>
                    <td><%= admin[i].username %></td> <!-- Kolom username untuk pencarian -->
                    <td><%= admin[i].email %></td>
                    <td>
                      <form action="/admins/status/<%= admin[i].id %>" method="POST">
                        <button class="" style="cursor: pointer; background: transparent; border:0;">
                          <% if (admin[i].status) { %>
                            <input type="checkbox" 
                                   class="status-toggle" 
                                   data-toggle="toggle" 
                                   data-onstyle="success" 
                                   checked
                                   name="status"
                                   data-on="On" 
                                   data-off="Off" 
                                   onchange="this.form.submit()"/>
                          <% } else { %>
                            <input type="checkbox" 
                                   class="status-toggle" 
                                   data-toggle="toggle" 
                                   data-onstyle="success" 
                                   data-offstyle="danger"
                                   name="status"
                                   data-on="On" 
                                   data-off="Off" 
                                   onchange="this.form.submit()"/>
                          <% } %>
                        </button>
                      </form>
                    </td>
                    <td>
                      <form action="/admins/superadmin/<%= admin[i].id %>" method="POST">
                        <button class="" style="cursor: pointer; background: transparent; border:0;">
                          <% if (admin[i].isSuperAdmin) { %>
                            <input type="checkbox" 
                                   class="status-toggle" 
                                   data-toggle="toggle" 
                                   data-onstyle="warning" 
                                   checked
                                   name="status"
                                   data-on="On" 
                                   data-off="Off" 
                                   onchange="this.form.submit()"/>
                          <% } else { %>
                            <input type="checkbox" 
                                   class="status-toggle" 
                                   data-toggle="toggle" 
                                   data-onstyle="success" 
                                   data-offstyle="danger"
                                   name="status"
                                   data-on="On" 
                                   data-off="Off" 
                                   onchange="this.form.submit()"/>
                          <% } %>
                        </button>
                      </form>
                    </td>
                    <td>
                      <form action="/admins/delete/<%= admin[i].id %>?_method=DELETE" method="POST">
                        <div class="text-center">
                          <a href="/admins/edit/<%= admin[i].id %>" class="btn btn-warning">
                            <i class="fas fa-pencil-alt"></i> Edit
                          </a>
                          <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i> Delete
                          </button>
                        </div>
                      </form>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
          
        </div>
      </div>
    </div>
    
  </div>
  <footer class="footer">
    <div class="d-sm-flex justify-content-center justify-content-sm-between">
      <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright Â© 2024 <a href="https://www.bootstrapdash.com/" target="_blank">Let's stream</a>. All rights reserved.</span>
    </div>
  </footer>
</div>

