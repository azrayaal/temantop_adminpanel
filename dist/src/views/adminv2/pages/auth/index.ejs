<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login page </title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="/corona/dist/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="/corona/dist/assets/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="/corona/dist/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="/corona/dist/assets/vendors/font-awesome/css/font-awesome.min.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="/corona/dist/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="./assets/letsstreamlogo.png" />
  </head>
  <body>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="row w-100">
          <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
            <div class="card col-lg-4 mx-auto">
              <div class="card-body px-5 py-5">
                <%- include ('../../components/messages.ejs')%>
                <h3 class="card-title text-start mb-3">Login</h3>
                <form action="/admin/auth" method="post">
                    <div class="input-group mb-3">
                      <input type="username" class="form-control" placeholder="username" name="username" />
                      <div class="input-group-append">
                        <div class="input-group-text">
                          <span class="fa fa-envelope"></span>
                        </div>
                      </div>
                    </div>
                  
                    <div class="input-group">
                      <input id="pwd" type="password" class="form-control" placeholder="Password" name="password" />
                      <div class="input-group-append">
                        <div class="input-group-text">
                          <span class="fa fa-lock"></span>
                        </div>
                      </div>
                    </div>
                    <input type="checkbox" class="my-3" onclick="myFunction()" /> Show Password
                    <div class="row">
                      <!-- /.col -->
                      <div class="col-6">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                      </div>
                      
                      <!-- /.col -->
                    </div>
                  </form>
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
        </div>
        <!-- row ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/corona/dist/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="/corona/dist/assets/js/off-canvas.js"></script>
    <script src="/corona/dist/assets/js/misc.js"></script>
    <script src="/corona/dist/assets/js/settings.js"></script>
    <script src="/corona/dist/assets/js/todolist.js"></script>
    <!-- endinject -->
  </body>
</html>

<script>
  function myFunction() {
    var x = document.getElementById("pwd");
    if (x.type === "password") {
      x.type = "text";
    } else {
      x.type = "password";
    }
  }
</script>

